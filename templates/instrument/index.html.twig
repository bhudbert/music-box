{% extends 'base.html.twig' %}

{% block title %}Hello InstrumentController!{% endblock %}

{% block body %}
<div class="container">
    <br>
    <h1>Mes beaux instruments! </h1>
    <br>
    <div class="row flex">
        {%   for instrument in instruments %}
            <div class="col-4">
              <div class="card">
                  <div class="card-body">
                      <h4 class="card-title">
                          {{ instrument.name }}
                      </h4>
                      <p>
                          {{ instrument.description }}
                      </p>
                      <a href="{{ path('instrument/',{ name:instrument.slug ,id:instrument.id }) }}">Plus..</a>

                  </div>
              </div>

            </div>
        {% endfor %}
    </div>


</div>

{% endblock %}

